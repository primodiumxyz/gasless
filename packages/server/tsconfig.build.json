{
  "extends": "../../.tsconfigs/bundler/no-dom/library.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "noEmit": false,
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "./__tests__", "./dist", "./vite.config.ts"],
  "include": ["**/**.ts"],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
