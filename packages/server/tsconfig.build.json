{
  "extends": "../../.tsconfigs/bundler/dom/library-monorepo.json",
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "composite": false,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "bin/**/*.ts"],
  "exclude": ["node_modules", "./__tests__", "./dist", "./vite.config.ts"],
}
